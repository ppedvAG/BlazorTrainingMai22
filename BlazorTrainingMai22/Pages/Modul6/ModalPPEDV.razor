@if (isShow)
{
  <div class="modal fade show"  tabindex="-1" 
 style="display: block;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLiveLabel">@Titel</h5>
        <button type="button" class="btn-close"  @onclick="Show"></button>
      </div>
      <div class="modal-body">
        @ChildContent
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" @onclick="Show">Close</button>
        <button type="button" class="btn btn-primary" 
        @onclick="()=>OnSave.InvokeAsync()">Save changes</button>
      </div>
    </div>
  </div>
</div>
<div class="modal-backdrop fade show"></div>  
}

@code {
    [Parameter]
    public string Titel { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public EventCallback OnSave { get; set; }
    bool isShow;
    public void Show()
    {
        isShow = !isShow;
        StateHasChanged();
    }

}
